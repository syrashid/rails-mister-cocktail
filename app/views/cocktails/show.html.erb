<h1><%= @cocktail.name %></h1>
<%= link_to "Add Ingredient", new_cocktail_dose_path(@cocktail) %>

<% @cocktail.doses.each do |dose| %>
<p><%= dose.description %>&nbsp-&nbsp<%= dose.ingredient.name %>&nbsp
<%= link_to '<i class="far fa-trash-alt"></i>'.html_safe, dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' }  %>
</%></p>
<% end %>

