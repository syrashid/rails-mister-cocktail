<div class="container">
  <div class="row">

    <div class="col-4">
      <img class="fit-image rounded" src="https://source.unsplash.com/random?cocktail" alt="Cocktail placeholder">
      <div class="drink-info flex-grow-1 p-3">
        <h5>Add an Ingredient</h5>
        <%= simple_form_for [@cocktail, @dose] do |f|%>
        <%= f.input :description, :label_html => { :class => 'form-label' } %>
        <%= f.association :ingredient, collection: Ingredient.order('name ASC'), input_html: { class: 'select2' }, :label_html => { :class => 'form-label' } %>
        <%= f.submit "Add Ingredient", class: "btn btn-dark btn-lg" %>
        <% end %>
      </div>
    </div>

    <div class="col-8 d-flex flex-column">
      <div class="d-flex justify-content-between align-items-center mr-5">
        <h1><%= @cocktail.name %></h1>
        <%= link_to "Back Home", cocktails_path, class: "btn btn-light btn-lg" %>
      </div>
      <div class="drink-info flex-grow-1 mr-5 p-3">
        <h5>Ingredients</h5>
        <% @cocktail.doses.each do |dose| %>
        <p>&nbsp<%= dose.description %>&nbsp-&nbsp<%= dose.ingredient.name %>&nbsp
          <%= link_to '<i class="far fa-trash-alt"></i>'.html_safe, dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' }  %>
          </%></p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
