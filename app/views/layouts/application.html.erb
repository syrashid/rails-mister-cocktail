<!DOCTYPE html>
<html>
<head>
  <title>RailsMisterCocktail</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.8/css/select2.min.css" rel="stylesheet" />
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <%= stylesheet_pack_tag 'application' %>
</head>

<body>
  <div class="banner">
    <%= yield %>
  </div>

  <a name="scroll"></a>
  <div class="fixed-scroll bg-dark pt-2 pb-2">
    <% @cocktails.each do |cocktail| %>
    <div class="card border m-3">
      <img class="card-img-top" src="https://source.unsplash.com/random?cocktail" alt="Cocktail placeholder">
      <div class="card-body d-flex justify-content-between align-items-center">
        <h5 class="mb-0 p-2"><%= cocktail.name %></h5>
        <%= link_to 'Ingredients', cocktail_path(cocktail), class: "btn btn-dark" %>
      </div>
    </div>
    <% end %>
  </div>

<%= javascript_include_tag "application" %> <!-- from app/assets/javascripts/application.js -->
<%= javascript_pack_tag "application" %>    <!-- from app/javascript/packs/application.js -->
</body>
</html>
