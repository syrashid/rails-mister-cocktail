<div class="row">
  <div class="container">
    <h1 class="">Add an ingredient for</h1>
    <h1 class="mb-4"><%= @cocktail.name %></h1>
    <div class="col-5 p-3 rounded" style="background:white">
      <%= simple_form_for [@cocktail, @dose] do |f|%>
      <%= f.input :description, :label_html => { :class => 'form-label' } %>
      <%= f.association :ingredient, :label_html => { :class => 'form-label' },input_html: { class: 'select2' } %>
      <%= f.submit "Add Ingredient", class: "btn btn-dark btn-lg" %>
      <% end %>
    </div>
  </div>
</div>
